{
  "name": "impulses-landing",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build:css": "tailwindcss -i ./assets/css/main.css -o ./assets/css/output.css",
    "watch:css": "tailwindcss -i ./assets/css/main.css -o ./assets/css/output.css --watch",
    "dev": "npm run watch:css & bundle exec jekyll serve",
    "build": "npm run build:css && bundle exec jekyll build"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5"
  }
}